<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jy.emp.mapper.EmpMapper">

    <resultMap id="empMap" type="Emp">
        <id column="emp_id" property="empId"/>
        <result column="name" property="name"/>
        <result column="sex" property="sex"/>
        <result column="age" property="age"/>
        <result column="sal" property="sal"/>
        <result column="birthday" property="birthday"/>
        <result column="address" property="address"/>
        <result column="deptId" property="deptId"/>
        <association property="dept" column="dept_id" javaType="Dept">
            <id column="dept_id" property="deptId"/>
            <result column="dept_name" property="deptName"/>
        </association>
    </resultMap>

    <!--  查询员工列表数据  -->
    <select id="getEmpList" parameterType="com.jy.emp.vo.EmpQuery" resultMap="empMap">
        select * from emp e left join dept d on e.dept_id = d.dept_id
        <include refid="getEmpListWhere"></include>
        order by emp_id
        limit #{start},#{limit}
    </select>
    <!--  查询员工数据量  -->
    <select id="countEmpList" parameterType="com.jy.emp.vo.EmpQuery" resultType="Long">
        select count(1) from emp e
        <include refid="getEmpListWhere"></include>
    </select>

    <sql id="getEmpListWhere">
        <where>
            <if test="name != null">
                e.name like '%' #{name} '%'
            </if>
            <if test="startDate != null">
                <![CDATA[
                and e.birthday >= #{startDate}
                ]]>
            </if>
            <if test="endDate != null">
                <![CDATA[
                and e.birthday <= #{endDate}
                ]]>
            </if>
        </where>
    </sql>

    <insert id="addEmp" parameterType="Emp">
        insert into emp
            (name,age,sex,sal,birthday,address,dept_id)
        values
            (#{name},#{age},#{sex},#{sal},#{birthday},#{address},#{deptId})
    </insert>

    <delete id="deleteEmpByIds" parameterType="String">
        delete from emp where emp_id in (${ids})
    </delete>
</mapper>
 